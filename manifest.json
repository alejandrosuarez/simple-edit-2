{
  "name": "SimpleEdit",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "start_url": "/",
  "short_name": "SimpleEdit",
  "theme_color": "#181818",
  "description": "Quickly edit your photos, create collages and more",
  "orientation": "any",
  "background_color": "#6c63ff",
  "related_applications": [],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "assets/icons/maskable_icon.png",
      "sizes": "512x512",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon_256.png",
      "sizes": "256x256"
    },
    {
      "src": "assets/icons/icon_128.png",
      "sizes": "128x128"
    },
    {
      "src": "assets/icons/icon_64.png",
      "sizes": "64x64"
    },
    {
      "src": "assets/icons/icon_48.png",
      "sizes": "48x48"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/screen_1.png"
    },
    {
      "src": "assets/screenshots/screen_2.png"
    },
    {
      "src": "assets/screenshots/screen_3.png"
    },
    {
      "src": "assets/screenshots/screen_4.png"
    }
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "categories": [
    "photo",
    "utilities"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+simpleedit",
      "url": "/share/image/?url=%s"
    }
  ],
  "share_target": {
    "action": "/share/image/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "files": [
        {
          "name": "file",
          "accept": [
            "image/jpeg",
            ".png",
            ".jpg",
            ".webp"
          ]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "image/*": [
          ".png",
          ".jpg",
          ".webp"
        ]
      }
    }
  ],
  "scope": "/"
}